    "pub:patch": "npm version patch && npm publish && git add . && git commit -m 'new build' git push && git push --tags",
    "test": "run-s build ava",
    "tsc": "tsc"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "peerDependencies": {
    "lodash": ">=4.17.15",
    "rxjs": ">=6.0.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.136",
    "@types/node": "12.6.8",
    "@types/rx": "4.1.1",
    "ava": "2.2.0",
    "esm": "^3.2.25",
    "lodash": "4.17.15",
    "microbundle": "0.11.0",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "rxjs": "^6.5.2",
    "tap-nyan": "1.1.0"
  }
}
